%h1 Listing articles

%table
  %thead
    %tr
      %th Title
      %th
      %th
      %th

  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= link_to 'Show', article
        %td= link_to 'Edit', edit_article_path(article)
        %td= button_to 'Destroy', article, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }

%br

= link_to 'New Article', new_article_path
